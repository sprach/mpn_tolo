<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestUserControls.View.MainPage"
             xmlns:uc="clr-namespace:TestUserControls.UC;assembly=TestUserControls"
             Title="MainPage">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*">
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Label Text="Welcome to .NET MAUI!" FontSize="32" HorizontalOptions="Center" />
            <uc:UcMyLabel x:Name="MyLabel"/>
            <Button Text="Go to SubPage1" Clicked="OnGoToSubPage1Clicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
